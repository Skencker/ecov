        <div class="container mb-5">
            <div class='row mt-5 d-flex  justify-content-center m-2'>
               <div class="col-sm-12 col-md-5 col-lg-2 bg-light box p-3">
                    <div class='row'>
                        <h4 class="fw-bold"> Filtrer... </h4>
                        {{ form_start(form) }}
                            <div class="row">
                                {{ form_row(form.string) }}
                            </div>
                            <div class="row">
                                <div class="">
                                    {{ form_row(form.deal) }}
                                    {{ form_row(form.categories) }}
                                </div>
                            </div>
                        {{ form_end(form) }}

                    </div> 
                </div>
                <div class="col-sm-12 col-md-7 col-lg-10">

                        {% for produit in produits %}
                            <div class="col-12 col-lg-4">
                                <div class="product">
                                    <div class="effect-1"></div>
                                    <div class="effect-2"></div>
                                    <div class="content d-flex"> 
                                        <div class="row ">
                                            <a href="{{ path('produit', {'slug': produit.slug}) }}" class="text-dark text-decoration-none">
                                                <div class="card box-card box d-flex justify-content-center" style="width: 18rem;">
                                                    <img src="/uploads/images/{{produit.image}}" class="card-img-top" alt="{{produit.name}}">
                                                    <div class="card-body">
                                                        <h5 class="card-title">{{produit.name}}</h5>
                                                        {% if produit.deal == 'Don'%}
                                                            <p class="card-text"> Donné par : {{produit.user}}</p>
                                                            {% else %}
                                                            <p class="card-text"> Vendu par : {{produit.user}} | Prix : {{produit.price}} €</p>
                                                        {% endif %}
                                                        <p class='text-'>Publié le : {{produit.createAt|date("d/m/Y")}}</p>
                                                    <a href="{{ path('produit', {'slug': produit.slug}) }}" class="btn btn-sm w-100 align-self-center text-light fw-bold " style="background:#7AB7AB">VOIR</a>  

{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block content %}

    {# {% if app.user.valid == 0 %} 
        {{ render('connexion') }}
    {% else %} #}
        <div class="container mb-5">
            <div class='row mt-5 d-flex  justify-content-center'>
               <div class="col-sm-12 col-md-5 col-lg-3">
                    <div class='row'>
                        <h4> Rechercher </h4>
                        {{ form_start(form) }}
                            <div class="row">
                                {{ form_row(form.string) }}
                            </div>
                            <div class="row">
                                <div class="">
                                    {{ form_row(form.categories) }}
                                {# </div>
                                <div class="col-6" id="some-custom-id"> #}
                                    {{ form_row(form.deal) }}
                                </div>
                            </div>
                        {{ form_end(form) }}

                    </div> 
                </div>
                <div class="col-sm-12 col-md-7 col-lg-9">
                    <div class="row d-flex  justify-content-center">
                        {% for produit in produits %}
                            <div class="col-12 col-lg-4">
                                <div>
                                    <div id="card" class="card shadow my-4 p-2  d-flex justify-content-center" style="height:22rem width:18rem" >
                                        <div style=" height: 20vh; width: 100wh;">
                                            <img src="/uploads/images/{{produit.image}}" alt="{{produit.name}}" class="img-fluid  px-5 mx-auto pt-3 " style="heigth:100px width: 100px">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title ">{{produit.name}}</h5>
                                            <p class="card-text">{{produit.category}}</p>
                                            <div class='d-flex justify-content-around '>
                                                <a href="{{ path('produit', {'slug': produit.slug}) }}" class="btn btn-secondary btn-sm align-self-center">VOIR</a>                                    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {# {% endif %} #}
{% endblock %}

